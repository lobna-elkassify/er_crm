<h1>Editing Department</h1>

<p>
  <b>ID:</b> <%= @department.id %><br>
</p>

<form accept-charset="UTF-8" action="<%= department_path(@department) %>" method="post">
  <input name="utf8" type="hidden" value="âœ“">
  <input name="_method" type="hidden" value="put">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
  
  <p>
    <b>Name:</b>
    <input required type="text" value="<%= @department.name %>" name="department[name]" maxlength="45" size="45">
  </p>

  <p>
    <b>Category:</b>
    <select required name="department[category_id]">
      <% ErCrm::LeadCategory.all.each do |lead_category| %>
        <option value="<%= lead_category.id %>" <%= 'selected' if lead_category.id == @department.category_id %>>
          <%= lead_category.name %>
        </option>
      <% end %>
    </select>
  </p>

  <button type="submit">Submit</button>
</form>