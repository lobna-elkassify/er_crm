<a href="<%= new_department_path %>">New</a>
<table border="1">
  <tr>
    <th>
      Department ID
    </th>
    <th>
      Department Name
    </th>
    <th colspan="3">
    </th>
  </tr>
  <% @departments.each do |department| %>
    <tr>
      <td><%= department.id %></td>
      <td><%= department.name %></td>
      <td><a href="<%= department_path(department) %>">Show</a></td>
      <td><a href="<%= edit_department_path(department) %>">Edit</a></td>
      <td><a href="<%= department_path(department) %>" data-method="delete"
             data-confirm="Are you sure you want to delete department?">Delete</a></td>
    </tr>
  <% end %>
</table>