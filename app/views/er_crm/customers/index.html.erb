<h1>Customers</h1>

<a href="<%= new_customer_path %>">New</a>

<table border="1">
  <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Source</th>
      <th>Country</th>
      <th>Address</th>
      <th>Owner User</th>
      <th>Customer User ID</th>
      <th colspan="3"></th>
  </tr>
  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.email %></td>
      <td><%= customer.name %></td>
      <td><%= customer.phone %></td>
      <td><%= customer.source.try(:name) %></td>
      <td><%= customer.country.try(:name) %></td>
      <td><%= customer.address_line %></td>
      <td><%= customer.owner_user.try(:name) %></td>
      <td><%= customer.user.try(:name) %></td>
      <td><a href="<%= customer_path(customer) %>">Show</a></td>
      <td><a href="<%= edit_customer_path(customer) %>">Edit</a></td>
      <td><a href="<%= customer_path(customer) %>" data-method="delete"
             data-confirm="Are you sure you want to delete this customer?">Delete</a></td>
    </tr>
  <% end %>
</table>