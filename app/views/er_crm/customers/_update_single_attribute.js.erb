var saveAnchor = $("a.icn-save.<%= attribute_name %>");
var editContainer = saveAnchor.parent("span.js-upload");
var showContainer = editContainer.prev("span.js-edit");

editContainer.addClass("hidden");
showContainer.find(".field_value").html("<%= attribute_value%>");

showContainer.children(":hidden").val("<%= attribute_value %>");
showContainer.removeClass("hidden");

saveAnchor.siblings("span").addClass("hidden")

var successMsg = "<%= attribute_name.humanize %> saved successfully" ;
showContainer.find(".success_msg").html(successMsg).removeClass("hidden")